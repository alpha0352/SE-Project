<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review Mangament</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <script defer src="/javascripts/all.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/Chart.min.css">
    <link rel="stylesheet" href="/stylesheets/perfect-scrollbar.css">
    <link rel="stylesheet" href="/stylesheets/app.css">
    <style type="text/css">
        .notif:hover {
            background-color: rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>
    <div id="app">
        <%- include('../views/sidebarpartial'); %>
        
        <div id="main">
            <nav class="navbar navbar-header navbar-expand navbar-light">
                <a class="sidebar-toggler" href="#"><span class="navbar-toggler-icon"></span></a>
                <button class="btn navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav d-flex align-items-center navbar-light ms-auto">

                        <li class="dropdown">
                            <a href="#" data-bs-toggle="dropdown"
                                class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                                <div class="avatar me-1">
                                    <img src="/images/admin.png" alt="" srcset="">
                                </div>
                                <div class="d-none d-md-block d-lg-inline-block">Hi, <%= adminname%></div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <!-- <a class="dropdown-item" href="#">
                           <i data-feather="user"></i> 
                        Account</a>
                        <a class="dropdown-item" href="#">
                           <i data-feather="settings"></i> Settings</a>
                        <div class="dropdown-divider"></div> -->
                                <form action="/admin/logout" method="GET">
                                    <button class="dropdown-item">
                                        <i data-feather="log-out"></i> Logout</button>
                                </form>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="main-content container-fluid">
                <div class="page-title">
                    <h3>Dashboard</h3>
                </div>
                <section class="section">
                    <div class="row mb-2">
                        <% for (const [key, review] of Object.entries(reviews)) { %>
                        <div class="col-xl-4 col-md-12 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between p-md-1">
                                        <div class="d-flex flex-row">
                                            <div class="align-self-center">
                                                <h3>Name: <%= review.name%></h3>
                                                <h5>Title: <%= review.reviewtitle%></h5>
                                                <p><%= review.review%>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <script src="/javascripts/feather.min.js" defer></script>
    <script src="/javascripts/perfect-scrollbar.min.js" defer></script>
    <script src="/javascripts/app.js" defer></script>
    <script src="/javascripts/Chart.min.js" defer></script>
    <script src="/javascripts/apexcharts.min.js" defer></script>
    <script src="/javascripts/dashboard.js" defer></script>
    <script src="/javascripts/main.js" defer></script>
</body>

</html>
